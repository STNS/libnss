{
  "extends": ["config:best-practices"],
  "automergeSchedule": [
    "before 2am"
  ],
  "packageRules": [
    {
      "matchUpdateTypes": ["minor", "patch", "pin"],
      "automerge": true
    },
    {
      "matchDatasources": ["docker"],
      "enabled": false
    }
  ],
  "customManagers": [
    {
      "customType": "regex",
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": ["CURL_VERSION=(?<currentValue>.+)"],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "curl/curl",
      "extractVersionTemplate": "regex:^curl-(?<major>\\d+?)_(?<minor>\\d+?)_(?<patch>\\d+?)$"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": ["OPENSSL_VERSION=(?<currentValue>.*)"],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "openssl/openssl",
      "extractVersionTemplate": "regex:^openssl-(?<major>\\d+?).(?<minor>\\d+?).(?<patch>\\d+?)$"
    },
    {
      "customType": "regex",
      "fileMatch": [
        "^Makefile$"
      ],
      "matchStrings": ["ZLIB_VERSION=(?<currentValue>.*)"],
      "datasourceTemplate": "github-tags",
      "depNameTemplate": "madler/zlib",
      "extractVersionTemplate": "{{#if extractVersion}}{{{extractVersion}}}{{else}}^v?(?<version>.+)${{/if}}"
    }
  ]
}
